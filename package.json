{
  "name": "melperjs",
  "version": "14.0.0",
  "description": "Javascript module to use predefined common functions and utilities",
  "keywords": [
    "melperjs",
    "melper js",
    "helper js",
    "helper",
    "utils",
    "common functions",
    "javascript helper",
    "nodejs helper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mahelbir/melperjs.git"
  },
  "author": "Mahmuthan Elbir",
  "license": "MIT",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./node": {
      "import": "./lib/esm/node.js",
      "require": "./lib/cjs/node.js"
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "cross-env BABEL_ENV=esm babel ./src --out-dir ./lib/esm",
    "build:cjs": "cross-env BABEL_ENV=cjs babel ./src --out-dir ./lib/cjs",
    "test": "node test/script.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "hpagent": "^1.2.0",
    "lodash": "^4.17.21",
    "set-cookie-parser": "^2.7.1",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3"
  }
}
